// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String?
  email  String   @unique
  role   Role     @default(USER)
  }

model Character {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  status String
  gender String
}

model Page {
    id    String @id @default(auto()) @map("_id") @db.ObjectId
    count Int
    pages Int
    next  String?
    prev  String?
}

enum Role {
  USER
  ADMIN
}